# =============================================================================
# AUTO LOAD .env FILES
# =============================================================================

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –∑–∞–≥—Ä—É–∑–∫–∏ .env —Ñ–∞–π–ª–∞ –∏–∑ —Ç–µ–∫—É—â–µ–π –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–∏
load_env() {
    if [ -f .env ]; then
        echo "üîß Loading .env file..."
        set -a  # –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ —ç–∫—Å–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –≤—Å–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ
        source .env
        set +a
        echo "‚úÖ Environment variables loaded"
    fi
}

# –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –∑–∞–≥—Ä—É–∂–∞—Ç—å .env –ø—Ä–∏ –≤—Ö–æ–¥–µ –≤ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ)
auto_load_env() {
    if [ -f .env ] && [ ! "$PWD" = "$OLDPWD" ]; then
        load_env
    fi
}

# –ê–ª–∏–∞—Å –¥–ª—è —Ä—É—á–Ω–æ–π –∑–∞–≥—Ä—É–∑–∫–∏
alias loadenv='load_env'
